{
	"name": "vscode-save-and-run-built-in-commands",
	"displayName": "vscode-save-and-run-built-in-commands",
	"description": "Run vscode built in commands on file changes",
	"version": "0.0.1",
	"publisher": "cyangle",
	"license": "Apache-2.0",
	"repository": "https://github.com/cyangle/vscode-save-and-run-built-in-commands",
	"engines": {
		"vscode": "^1.54.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:vscode-save-and-run-built-in-commands.helloWorld"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.saveAndRunExt.enable",
				"title": "Save and Run Ext : Enable"
			},
			{
				"command": "extension.saveAndRunExt.disable",
				"title": "Save and Run Ext : Disable"
			}
		],
		"configuration": {
			"title": "Save & Run command configuration.",
			"type": "object",
			"properties": {
				"saveAndRunExt": {
					"type": "object",
					"properties": {
						"watchFolderPath": {
							"type": "string"
						},
						"commands": {
							"type": "array",
							"items": {
								"type": "object",
								"properties": {
									"match": {
										"type": "string",
										"description": "Regex for matching files to run commands on.",
										"default": ".*"
									},
									"notMatch": {
										"type": "string",
										"description": "Regex for matching files *not* to run commands on.",
										"default": ".*"
									},
									"cmd": {
										"type": "array",
										"items": {
											"type": "string"
										},
										"description": "Command to execute on save.",
										"default": "echo ${file}"
									},
									"isAsync": {
										"type": "boolean",
										"description": "Run command asynchronously.",
										"default": false
									},
									"isShellCommand": {
										"type": "boolean",
										"description": "Run command in terminal.",
										"default": true
									}
								}
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.54.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}